<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(@recipe.errors.count,"error") %>
          prohibited this recipe from getting saved:
        </h2>
        <div class="panel-body">
          <ul>
            <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
      </div>

    </div>

  </div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"})  do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-lg btn-primary btn-xlarge" %>
    </div>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4 color-match">
    [ <%= link_to "Cancel request and return to recipe listing", recipes_path %> ]
  </div>
</div>
