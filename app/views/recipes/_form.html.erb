<%= render "shared/errors", obj: @recipe %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"})  do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10, class: "form-control" %>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-12">
          <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-lg btn-primary btn-xlarge" %>
    </div>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4 color-match">
    [ <%= link_to "Cancel request and return to recipe listing", recipes_path %> ]
  </div>
</div>
