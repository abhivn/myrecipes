<div class="message">
  <p>
    <!-- <%= image_tag message.chef.image.url(:thumb), id: "show-img"%> -->
    <%= image_tag "gravatar.jpg", height: 50, width: 50 %>
    <strong><%= message.chef.chefname.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
  <p>
    <small><em>Created <%= time_ago_in_words(message.created_at)%> ago</em></small>
  </p>
</div>
