<div class="row">
  <div class="col-md-2">
    <section class="chef-info center">
      <%= image_tag "gravatar.jpg", width: 100, height: 100, id: "show-img"%>
    </section>
  </div>
  <div class="col-md-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet"><small>Created <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.chefname %></small></span>
    </p>
  </div>

</div>
