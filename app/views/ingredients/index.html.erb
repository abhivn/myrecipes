<%=  render 'shared/page_title', title: 'Available Ingredients'%>
<div align="center">
  <%= will_paginate @ingredients %>
  <%= @ingredients.each do |ing| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well center">
    <h4><%= link_to ing.name.capitalize, ingredient_path(ing), class:"chef-title"%></h4>
    <p><small><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></small></p>
    <% if logged_in? && current_chef.admin?%>
    <p><%= link_to "Edit the ingredients", edit_ingredient_path(ing),class: "chef-title"%></p>
    <% end %>
    </div>
  </div>
  <% end %>
</div>
<div align="center">
  <%= will_paginate @ingredients %>
</div>
